{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "eventHubNamespace": {
      "type": "string",
      "metadata": {
        "description": "Name of EventHub namespace"
      }
    },
    "eventHubName": {
      "type": "string",
      "defaultValue": "datadog-eventhub",
      "metadata": {
        "description": "Name of Event Hub"
      }
    },
    "copies": {
      "type": "int",
      "metadata": {
        "description": "number of functins and event hubs"
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2018-01-01-preview",
      "name": "[parameters('eventHubNamespace')]",
      "type": "Microsoft.EventHub/namespaces",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard",
        "tier": "Standard",
        "capacity": 1
      },
      "properties": {

      },
      "resources": [
      ]
    },
    {
      "name": "[concat(parameters('eventHubNamespace'), '/', parameters('eventHubName'),'-', copyIndex(1))]",
      "type": "Microsoft.EventHub/namespaces/eventhubs",
      "apiVersion": "2017-04-01",
      "copy": {
        "name": "nsg-loop",
        "count": "[parameters('copies')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.EventHub/namespaces/', parameters('eventHubNamespace'))]"
      ],
      "properties": {}
    },
    {
      "name": "[concat(parameters('eventHubNamespace'),'/', parameters('eventHubName'),'-', copyIndex(1), '/Rule-', copyIndex(1))]",
      "type": "Microsoft.EventHub/namespaces/eventhubs/authorizationRules",
      "apiVersion": "2017-04-01",
      "copy": {
        "name": "nsg-loop",
        "count": "[parameters('copies')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.EventHub/namespaces/eventhubs', parameters('eventHubNamespace'), concat(parameters('eventHubName'),'-', copyIndex(1)))]",
        "[resourceId('Microsoft.EventHub/namespaces', parameters('eventHubNamespace'))]"
      ],
      "properties": {
        "rights": [ "Send", "Listen" ]
      }
    }
  ]
}